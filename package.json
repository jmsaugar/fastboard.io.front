{
  "name": "fastboard.io.front",
  "version": "1.0.0",
  "description": "Real-time online collaborative whiteboard",
  "license": "MIT",
  "homepage": "https://fastboard.io",
  "repository": "https://github.com/jmsaugar/fastboard.io.front",
  "bugs": "https://github.com/jmsaugar/fastboard.io.front/issues",
  "author": "Jesús Martínez Saugar <jesus.martinez.saugar@gmail.com> (https://github.com/jmsaugar)",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.4.0",
    "@styled-icons/fa-solid": "^10.22.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@xstyled/styled-components": "^1.17.0",
    "@xstyled/system": "^1.19.0",
    "i18next": "^19.8.2",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-http-backend": "^1.0.21",
    "paper": "^0.12.8",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^3.3.0",
    "react-helmet-async": "^1.0.7",
    "react-i18next": "^11.7.3",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "socket.io-client": "^3.0.1",
    "styled-components": "^5.0.1",
    "styled-normalize": "^8.0.7",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint:js": "eslint ./src ./devTools",
    "lint:css": "stylelint \"./src/**/*.js\"",
    "lint:all": "eslint ./src ./devTools; stylelint \"./src/**/*.js\"",
    "clean": "rm -rf ./build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/devTools/tests/setup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/devTools/tests/setupAfterEnv.js"
    ],
    "moduleNameMapper": {
      "#constants": "<rootDir>/src/constants",
      "#components": "<rootDir>/src/components",
      "#hooks": "<rootDir>/src/hooks",
      "#routes": "<rootDir>/src/routes",
      "#services": "<rootDir>/src/services",
      "#store": "<rootDir>/src/store",
      "#theme": "<rootDir>/src/theme",
      "#utils": "<rootDir>/src/utils",
      "#devTools/(.*)": "<rootDir>/devTools/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 3 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "react-app-rewired": "^2.1.6",
    "stylelint": "^13.7.2",
    "stylelint-config-idiomatic-order": "^8.1.0"
  }
}
